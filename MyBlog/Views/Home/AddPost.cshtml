@model MyBlog.ViewModels.PostViewModel


@Html.AntiForgeryToken()

<div class="container">
    <h4>New post</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="postName" name="Name">
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" id="postContent" name="Content">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <h4>Pictures</h4>
            <div>
                <div id="uploaded">
                </div>
                <input accept="image/*" type="file" multiple="multiple" name="upload" id="uploadFile" /><br />
                <button id="upload">Upload</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submit" type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<script src="~/Scripts/addPost.js"></script>


